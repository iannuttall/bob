{
  "name": "bob-agent",
  "version": "0.1.0",
  "description": "hi, i'm bob - your personal telegram ai assistant.",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "bob": "./bin/bob.js"
  },
  "scripts": {
    "setup": "bun bin/bob.ts setup",
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "bob": "bun bin/bob.ts",
    "lint": "biome lint .",
    "check:lines": "find src bin -name '*.ts' | xargs wc -l | awk '$1 > 500 && !/total/ {print $2 \": \" $1 \" lines (max 500)\"; err=1} END {exit err}'",
    "format": "biome format . --write",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "build": "bun build src/index.ts --outdir dist --target bun --external node-llama-cpp --external @node-llama-cpp/*"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.29",
    "@clack/prompts": "^0.11.0",
    "@openai/codex": "^0.94.0",
    "@openai/codex-sdk": "^0.94.0",
    "cron-parser": "^4.9.0",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "markdown-it": "^14.1.0",
    "node-llama-cpp": "^3.14.5",
    "picocolors": "^1.1.1",
    "sqlite-vec": "^0.1.7-alpha.2",
    "telegram": "^2.26.22"
  },
  "optionalDependencies": {
    "sqlite-vec-darwin-arm64": "^0.1.7-alpha.2",
    "sqlite-vec-darwin-x64": "^0.1.7-alpha.2",
    "sqlite-vec-linux-x64": "^0.1.7-alpha.2",
    "sqlite-vec-win32-x64": "^0.1.7-alpha.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "^1.3.8",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^19.2.10",
    "typescript": "^5.9.3"
  }
}
